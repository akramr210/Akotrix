<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <supports-screens
        android:smallScreens="false"
        android:normalScreens="false"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:requiresSmallestWidthDp="600"
        />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/akotrix_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/akotrix_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Akotrix"
        tools:targetApi="31">
        <activity
            android:name=".selection.SelectionActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:theme="@style/Theme.Akotrix">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".image_view.ImagesViewActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".position_change.ImagePositionModifyActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".create_folder.CreateFolderActivity"
            android:screenOrientation="landscape"
            />
    </application>

</manifest>